@import '../../component/mySearchOrderItem/mySearchOrderItem.wxss';

.navbar {
    display: flex;
    justify-content: space-around;
    width: 100%;
    height: 84rpx;
    position: fixed;
    z-index: 999;
    background: #fff;
    text-align: center;
    color: #686868;
    border-bottom: 2rpx #e4e5ea solid;
}

.navbar>view {
    flex: 1;
    line-height: 82rpx;
}

.active {
    display: inline-block;
    border-bottom: 4rpx #c81a29 solid;
}

.order-list {
    width: 100%;
    height: 100%;
    padding-top: 84rpx;
}

/*去支付按钮  */

.pay-btn {
    padding: 4rpx 34rpx;
    border: 1rpx #c81a29 solid;
    border-radius: 10rpx;
    color: #c81a29
}
