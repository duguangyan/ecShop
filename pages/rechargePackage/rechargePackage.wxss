/*套餐块  */
.package-item {
    
    width: 650rpx;
    height: 86rpx;
    position: relative;
    margin: 0rpx auto 20rpx;
    padding: 0 30rpx;
    border: 2rpx #EEEEEE solid;
    border-radius: 18rpx;
}

/*会员特权按钮  */
.member-info-btn {
    height: 44rpx;
   line-height: 44rpx;
    padding: 0 16rpx;
    border: 1rpx #2b2b2b solid;
    border-radius: 10rpx;
}

/*价格文字  */
.price-text {
    
}

/*选中状态  */

.selected {
    border: 2rpx red solid;
    background: #FFF7F8;
}

/*蒙版  */

.masking {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 999;
}

.masking .detail-info-box {
    background: white;
    width: 600rpx;
    padding: 44rpx 30rpx 66rpx 56rpx;
    margin: 254rpx auto;
    border-radius: 10rpx;
}
