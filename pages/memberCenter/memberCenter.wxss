/*第三列  */

.section-order .my-order-line {
    line-height: 104rpx;
    padding: 0 24rpx 0 34rpx;
    border-bottom: 1rpx #eee solid;
}

.section-service {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
}

.section-service .item image {
    width: 50rpx;
    height: 50rpx;
    margin: 38rpx auto 24rpx;
}
