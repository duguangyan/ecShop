/*选中状态  */

.category-list .category-selected {
    color: #c81a29;
    border-right: 0px;
    background: url(https://static.yidap.com/miniapp/bg-arrow-selected.png) no-repeat right center;
    background-size: 12rpx 12rpx;
}

.category-list-third {
    width: 300rpx;
    background: #f4f5f7;
    font-size: 24rpx;
    line-height: 100rpx;
}

.category-list-last {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.category-list-last view {
    width: 50%;
}

.category-list-last view:nth-of-type(2n+1) {
    background: url(https://static.yidap.com/miniapp/bg-spacing.png) center right no-repeat;
    background-size: 2rpx 30rpx;
}

/*交易动态 S  */

.transaction-news {
    display: flex;
    padding: 26rpx 0;
}

.transaction-news .transaction-news-icon {
    position: relative;
    width: 150rpx;
}

.transaction-news .transaction-news-icon image {
    position: absolute;
    left: 20rpx;
    bottom: 0;
}

.transaction-news .transaction-news-text {
    flex: 1;
    padding: 0 110rpx 0 20rpx;
    border-left: 2px #d7d7d7 solid;
    color: #666;
}

/*导航列表  */

.nav-list {
    padding: 40rpx 34rpx 28rpx;
    text-align: center;
}

.nav-list .nav-list-1 {
    display: flex;
    justify-content: space-between;
}

/*特殊处理不满8个情况 S */

.nav-list .nav-list-2 {
    display: flex;
    justify-content: flex-start;
}

.nav-list .nav-list-2 navigator {
    margin-right: 90rpx;
}

/*特殊处理不满8个情况 S */

.nav-list .nav-list-icon {
    width: 100rpx;
    height: 100rpx;
    /* margin-bottom: 10rpx；; */
}

.nav-list .nav-list-text {
    font-size: 26rpx;
    line-height: 56rpx;
    color: #4f4f4f;
}

/* 服务列表 */

.service-list {
    display: flex;
    padding: 20rpx;
    padding-bottom: 0;
    background: #f7f7f7;
    justify-content: space-between;
    flex-wrap: wrap;
}

.service-list>navigator {
    width: calc(50% - 10rpx);
    height: 170rpx;
    margin-bottom: 20rpx;
}

.service-list>navigator>image {
    width: 100%;
    height: 100%;
}

/*推荐  */

.recommend-list-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    line-height: 30rpx;
    font-size: 30rpx;
}

.recommend-list-nav .recommend-title {
    padding-left: 20rpx;
    border-left: 4rpx #c81a29 solid;
    font-weight: 600;
}

.recommend-list-nav .recommend-more {
    padding: 32rpx 0 24rpx 10rpx;
}

/*推荐列表  */

.recommend-list {
    display: flex;
    justify-content: space-between;
}

.recommend-list view {
    /* box-sizing: border-box; */
}

.recommend-list-left, .recommend-list-right {
    box-sizing: border-box;
}

.recommend-list-left {
    width: 375rpx;
    border-right: 3rpx #fff solid;
}

.recommend-list-right {
    width: 375rpx;
    border-left: 3rpx #fff solid;
}

.recommend-list-item {
    display: block;
    height: 265rpx;
    width: 100%;
    position: relative;
    border-top: 6rpx #fff solid;
    overflow: hidden;
}

.recommend-list-item>image {
    display: block;
    width: 100%;
    height: 100%;
}

/*推荐描述  */

.recommend-list-item-long {
    height: 534rpx;
}

.recommend-list-item-long >image {
    height: 534rpx;
}

/*合作品牌  */

.cooperation-brand {
    display: flex;
    flex-wrap: wrap;
}

.cooperation-brand .cooperation-brand-item {
    width: 25%;
    height: 134rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    border-top: 1rpx #e4e4e4 solid;
    border-right: 1rpx #e4e4e4 solid;
}

.cooperation-brand .no-border-right {
    border-right: 0;
}

.cooperation-brand .cooperation-brand-img {
    width: 160rpx;
    max-height: 100rpx;
}

