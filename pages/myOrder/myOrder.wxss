@import '../../component/orderItem/orderItem.wxss';

.navbar {
    display: flex;
    justify-content: space-around;
    width: 100%;
    height: 84rpx;
    position: fixed;
    z-index: 999;
    background: #fff;
    text-align: center;
    color: #686868;
    border-bottom: 2rpx #e4e5ea solid;
}

.navbar>view {
    flex: 1;
    line-height: 82rpx;
}

.active {
    display: inline-block;
    border-bottom: 4rpx #C81A29 solid;
}

.order-list {
    width: 100%;
    height: 100%;
    padding-top: 84rpx;
}
