.goods-desc {
    border-bottom: 2px #d5d7e3 solid;
}

.goods-name {
    padding: 20rpx 56rpx 4rpx 0;
    line-height: 38rpx;
}

.goods-number {
    line-height: 56rpx;
}

.transportation-info {
    display: flex;
    justify-content: space-between;
    border-top: 2rpx #eeeff3 solid;
    line-height: 78rpx;
    color: #656565;
}

/*顶部导航  */

.goods-nav {
    display: flex;
    justify-content: space-between;
    height: 108rpx;
    border-bottom: 2rpx #d7d7e1 solid;
    line-height: 108rpx;
}

.goods-nav-top {
    position: absolute;
    left: 20rpx;
    top: 20rpx;
}

.goods-nav-top image {
    width: 72rpx;
    height: 72rpx;
}

.goods-nav-shopping {
    left: 658rpx;
}

/*底部栏  */

.bottom-box {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    background: #fff;
    line-height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}

.bottom-box>navigator,.bottom-box > view{
    flex: 1;
    background: #f60;
}

.bottom-box .add-shopping-cart {
    background: #C81A29;
}

.bottom-box .go-shopping-cart {
    background: #fff;
}

