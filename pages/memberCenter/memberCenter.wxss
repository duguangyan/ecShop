page {
    background: #f2f2f2;
}

view {
    background: #fff;
}

/*钻石颜色  */
.zuanshi {
    color: #FF7C06;
}

.section-avatar {

    height: 214rpx;
    padding-bottom: 80rpx;
    background: #fff url('https://static.yidap.com/miniapp/deer/member-bg-1.png') no-repeat bottom;
    background-size: 750rpx 72rpx;
}

.avatar {
    padding: 0 30rpx;
}

.avatar image {
    display: block;
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    border-radius: 400rpx;
}

.section-avatar .member-info {
    flex: 1;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.member-info .member-tag {
    padding: 6rpx 24rpx;
    color: #fff;
    background: #444;
    border-radius: 30rpx;
    margin-top: 20rpx;
}

.setting image {
    width: 45rpx;
    height: 45rpx;
    padding: 20rpx 26rpx;
}

/*开通会员按钮  */
.member-service-btn {
    width: 170rpx;
    height: 62rpx;
    margin-right: 30rpx;
    text-align: center;
    color:#FFF;
    line-height: 62rpx;
    background: #C81A29;
}
/*图文按钮  */

.section-service .item, .section-order .item {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 25%;
    height: 180rpx;
    text-align: center;
}

/*商品栏目  */

.section-order .item {
    height: 160rpx;
}

.section-order .item image {
    height: 40rpx;
    width: 40rpx;
    margin: 40rpx auto 16rpx;
}

/*服务栏目  */

.section-service .item {
    width: 250rpx;
    box-sizing: border-box;
    border-bottom: 1rpx #f2f3f5 solid;
    border-right: 1rpx #f2f3f5 solid;
}

.section-service .item:nth-child(3n) {
    border-right: 1rpx #fff solid;
}

/*客服按钮  */

.contact-btn {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}

