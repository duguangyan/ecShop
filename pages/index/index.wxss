/*搜索栏 S  */

.search-box {
    display: flex;
    width: 750rpx;
    height: 96rpx;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999999;
    background: rgba(200,26,41,1);
}

.search-box .search-box-left {
    width: 126rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
}

.search-box .search-box-right {
    flex: 1;
    padding-right: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.search-box .search-box-right .search-inner-box {
    border-radius: 20rpx;
    padding-left: 70rpx;
    background: #fff url(https://static.yidap.com/miniapp/search.png) no-repeat 20rpx center;
    background-size: 30rpx 30rpx;
    position: relative;
}

.search-box .search-box-right .search-inner-box input {
    height: 68rpx;
}

/*分类列表下拉  */

.category-list {
    position: absolute;
    top: 96rpx;
    left: 0;
    z-index: 999;
    text-align: center;
    font-size: 28rpx;
    font-weight: blod;
    line-height: 100rpx;
}

.category-list>view {
    float: left;
}

.category-list-first {
    min-width: 180rpx;
    background: #fff;
}

.category-list-second {
    min-width: 180rpx;
    background: #f4f5f7;
}

.category-list-first view:nth-of-type(n+1),
.category-list-second view:nth-of-type(n+1) {
    border-top: 1rpx #e5e5e5 solid;
}

.category-list-second view {
    border-right: 1rpx #e5e5e5 solid;
}

