@import '../../component/mySearchOrderItem/mySearchOrderItem.wxss';

/*图片上传  */

.uploadbox {
    padding: 30rpx 20rpx;
    min-height: 210rpx;
}

.uploadbox image {
    width: 200rpx;
    height:200rpx;
    margin-right: 30rpx;
    border-radius: 10rpx;
    background: #fefefe;
}

/*收货地址  */

.address {
    min-height: 100rpx;
    padding: 30rpx 20rpx;
}



/*底部支付  */
.payment-choice {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 100rpx;
    background: #FFF;
    border-top: 2rpx #E5E5E3 solid;
}
.payment-choice view {
    margin-right: 20rpx;
    width: 150rpx;
    height: 54rpx;
    background: #FFF;
    text-align: center;
    line-height: 54rpx;
    border: 1rpx #BABABA solid;
    border-radius: 10rpx;
}

.payment-choice .cancel{

}

.payment-choice .pay {
    border: 1rpx #C81A29 solid;
}


